<!DOCTYPE html>
<html>
  <head>
    <title>Tables d'arbitrage</title>
    <link rel="stylesheet" href="/css/cd33.css" />
  </head>
  <body>
    <section class="container">
      <img class="logo-cd33" src="/img/cd33_logo.png" alt="logo CD33" />
      <h2 class="titre-h2">Sélectionnez votre table d'arbitrage</h2>
      <div class="grid">
        <% for(let i = 1; i <= 10; i++) { %>
        <button
          class="btn"
          onclick="location.href='/cd33/table<%= (i < 10 ? '0' : '') + i %>'"
        >
          Table <%= (i < 10 ? '0' : '') + i %>
        </button>
        <% } %>
      </div>
    </section>
  </body>
  <script src="/socket.io/socket.io.js"></script>
  <script>
    // Supposons que vous ayez déjà chargé la bibliothèque Socket.IO et défini tableId
    const socket = io(); // Initialiser la connexion socket

    // Rejoindre la room de la table spécifique dès que possible
    socket.on("connect", () => {
      socket.emit("joinTable", tableId); // Utiliser l'ID de table dynamique
    });

    // ... votre logique de socket supplémentaire ...
  </script>
</html>
